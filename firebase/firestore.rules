rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // userNotes: anyone can read when isPublic == true
    match /userNotes/{noteId} {
      allow read: if resource.data.isPublic == true || (request.auth != null && request.auth.uid == resource.data.userId);

      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.courseId is string
        && request.resource.data.chapterId is string
        && request.resource.data.isPublic is bool
        && (request.resource.data.notes == null || request.resource.data.notes is list);

      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // profiles: users can read basic profiles; owners can write their own
    match /profiles/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // courses: read-only for clients (admins should manage via console or admin SDK)
    match /courses/{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
