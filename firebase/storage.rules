rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Allow authenticated users to upload files under their own userNotes folder
    // Path convention used by client uploads: userNotes/{userId}/{chapterId}/{someFilename}
    match /userNotes/{userId}/{chapterId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if true; // <-- If you want public reads, keep this. For stricter security, make this false and use signed URLs.
    }

    // Optional: publicUserNotes for files that are intentionally public (alternative approach)
    // match /publicUserNotes/{noteId}/{fileName} {
    //   allow read: if true;
    //   allow write: if request.auth != null; // or more strict checks
    // }

    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
